@model dynamic

<h1>Gestión de Modelos</h1>

<!-- Sección para Persona -->
<h2>Personas</h2>
<a asp-controller="Persona" asp-action="Create">Crear Nueva Persona</a>
<table>
    <thead>
        <tr>
            <th>Código</th>
            <th>Email</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model.Personas)
        {
            <tr>
                <td>@persona.Codigo</td>
                <td>@persona.Email</td>
                <td>@persona.Nombre</td>
                <td>@persona.Telefono</td>
                <td>
                    <a asp-controller="Persona" asp-action="Edit" asp-route-codigo="@persona.Codigo">Editar</a>
                    <a asp-controller="Persona" asp-action="Delete" asp-route-codigo="@persona.Codigo">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

